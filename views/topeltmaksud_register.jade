<!DOCTYPE html>
html(lang="et")
extends report_header

block content
    meta(charset='utf-8')

    style(type='text/css').
        .grid_head {
            background-color: lightgray;;
        }

        .grid_data {
            width: 100%;
            border: 1px solid lightgray;
        }

    link(rel='stylesheet', href='/stylesheets/reports.css')
    div.body_wrapper
        h2.doc_header TOPELT ARVUTUSED
        each parameter in filter
            p #{parameter.name}: #{!parameter.start ? parameter.value : parameter.start} #{parameter.start ? ` - ${parameter.end}` : null}

        each isikukood in data
            p Isikukood: #{Object.keys(isikukood)[0]}
            table.table.table-hover.grid_data
                thead.grid_head
                    tr
                        th.th Isikukood
                        th.th Nimi
                        th.th Asutus
                        th.th Viitenumber
                        th.th Operatsiooni kood
                        th.th Operatsiooni nimetus
                        th.th Arvestatud summa
                        th.th Andmete koht

                tbody
                    each rea in isikukood[Object.keys(isikukood)[0]]
                        tr
                            td.td=rea.isikukood
                            td.td=rea.nimi
                            td.td=rea.asutus
                            td.td=rea.viitenumber
                            td.td=rea.kood
                            td.td=rea.nimetus
                            td.td=rea.summa
                            td.td=rea.koht

