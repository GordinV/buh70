<!DOCTYPE html>
html(lang="et")
style(type='text/css').
    .grid_head {
        background-color: lightgray;;
    }
    .grid_data {
        width: 100%;
        border: 1px solid lightgray;
        font-weight:normal;
    }
    .row_wrapper {
        display:-webkit-box;
        flexDirection: row;
    }
    .label {
            width:10%;
            font-weight:normal;
    }
    .input {
        width:90%;
        margin-left:5%;
        font-weight: bold;
    }
    .label_subtotal_arve {
        width:15em;
        text-align: right;

    }

    .input_subtotal_arve {
        width: 2em;
    }
    .kokku {
        font-weight: bold;
        margin-left: 10%;
        min-width: min-content;
    }
    .align_right {
        text-align: end;
        float: right;
        margin-right: 6%;
        margin-left: auto;
    }
    .doc_footer {
        display: grid;
        grid-auto-rows: 30px;
        text-align: right;
    }
    .div {
        line-height:1;
    }
    .auto {
        width: auto;
    }
    .div_column_left{
        width: 500px;
    }
    .div_column_right{
        width: 200px;
    }
    .td_align {
        text-align: center;
        vertical-align: top;
    }
    .fontLarger {
        font-size: larger;
    }

block content
    meta(charset='UTF-8')
    -var User = user ? user : {asutus: ''};
    div.body_wrapper.div
        div.row_wrapper
            div.label
                span Asutus:
            div.input
                span #{User.asutus}, reg.kood: #{User.regkood}
        div.row_wrapper
            div.label
                span Aadress:
            div.input
                span #{User.aadress}
        div.row_wrapper
            div.label
                span Telefon:
            div.input
                span #{User.tel}
        div.row_wrapper
            div.label
                span E-post:
            div.input
                span #{User.email}

        div.row_wrapper
            div.label
                span Raha saaja:
            div.input
                span #{User.parentid == 119 ? User.parent_asutus : User.asutusTais }
        div.row_wrapper
            div.label
                span Maksta arvele:
            table.input.auto
                tbody
                each aa in data[0].arved
                    tr
                        td #{aa.pank}
                        td #{aa.arve}
        div.row_wrapper
            div.label
                span Viitenumber:
            div.input
                span #{data[0].viitenr}

        h3
            p #{`${data[0].tyyp == 'ETTEMAKS' ? 'ETTEMAKSUARVE ': 'ARVE'}`} #{`${data[0].kr_number ? '(Kreeditarve arvele Nr.' + data[0].kr_number + ')': ''} `}

            div.row_wrapper
                div.label
                    span Number:
                div.input
                    span #{data[0].number}


            div.row_wrapper
                div.label
                    span Kuupäev:
                div.input
                    span #{data[0].kpv_print}
            div.row_wrapper
                div.label
                    span Tähtaeg:
                div.input
                    span #{data[0].tahtaeg_print}
            div.row_wrapper
                div.label
                    div Maksja:
                div.input
                    span #{`${data[0].asutus.trim()} isikukood/reg.kood: ${data[0].regkood}`}
            div.row_wrapper
                div.label
                    span Teenuse saaja:
                p.input
                    span #{`${data[0].lapse_nimi.trim()}, isikukood: ${data[0].isikukood}`}
            div.row_wrapper
                div.label
                    span Aadress:
                div.input
                    span #{`${data[0].aadress}`}

            div.row_wrapper
                div.label
                    span Lisa:
                div.input
                    span #{`${data[0].lisa ? data[0].lisa: ''}`}
            div.row_wrapper
                div.label
                    span Märkused :
                div.input
                    span #{`${data[0].muud ? data[0].muud : ''}`}

            table.table.table-hover.grid_data
                thead.grid_head
                    tr
                        th Teenuse nimetus
                        th Hind
                        th Soodustus
                        th Hind soodustusega
                        th Ühik
                        th Kogus
                        th Rea summa

                tbody
                    each row in data.details
                        tr
                            td=(row.markused)
                            td.td_align=Number(row.tais_hind,2).toFixed(2)
                            td.td_align=Number(row.soodustus).toFixed(4)
                            td.td_align=(Number(row.tais_hind,2) - Number(row.soodustus)).toFixed(4)
                            td.td_align=row.uhik
                            td.td_align=row.kogus
                            td.td_align=Number(row.summa).toFixed(2)

            h3
                div.doc_footer
                    div.row_wrapper
                        div.div_column.div_column_left
                            span Kokku arve summa:
                        div.div_column.div_column_right
                            span #{`${Number(data[0].summa).toFixed(2)}`}
                    div.row_wrapper
                        div.div_column.div_column_left
                            span Seisuga #{`${data[0].period_alg_print.trim()}`} #{`${Number(data[0].alg_jaak) > 0 ? 'Teil on võlgnevus:' : Number(data[0].alg_jaak) == 0 ? 'Teie jääk on:' : 'Teil on ettemaks:' }`}
                        div.div_column.div_column_right
                            span #{`${Math.abs(Number(data[0].alg_jaak)).toFixed(2)}`}
                    div.row_wrapper
                        div.div_column.div_column_left
                            span Olete tasunud perioodis #{`${data[0].laekumise_period}`}:
                        div.div_column.div_column_right
                            span #{`${Number(data[0].laekumised).toFixed(2)}`}
                    div.row_wrapper
                        div.div_column.div_column_left
                            span  #{`${Number(data[0].ulekanne) ? 'On tehtud makse ülekanne teis(t)ele viitenumbri(te)le:': '' }`}
                        div.div_column.div_column_right
                            span #{`${Number(data[0].ulekanne) ? Math.abs(Number(data[0].ulekanne)).toFixed(2): ''}`}
                    div.row_wrapper
                        div.div_column.div_column_left
                            span  #{`${Number(data[0].tagasimakse) ? 'Teile on tagastatud perioodis ' + data[0].laekumise_period : ''}`}
                        div.div_column.div_column_right
                            span #{`${Number(data[0].tagasimakse) ? Math.abs(Number(data[0].tagasimakse)).toFixed(2) : ''}`}

                    div.row_wrapper
                        div.div_column.div_column_left
                            span Seisuga #{`${data[0].kpv_print}`} #{`${data[0].tasumisele < 0 ? 'Teil on ettemaks:' : 'kuulub tasumisele:'}`}
                        div.div_column.div_column_right
                            span #{`${Math.abs(Number(data[0].tasumisele)).toFixed(2)}`}
            br
        p.fontLarger Küsimuste korral palun pöörduge asutusse #{`${User.asutus}`}


