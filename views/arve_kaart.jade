<!DOCTYPE html>
html(lang="et")
extends report_header

block content
    link(rel='stylesheet', href='/stylesheets/reports.css')

    div.body_wrapper
        h1
            p #{`${data[0].tyyp == 'ETTEMAKS' ? 'ETTEMAKSUARVE ': 'ARVE'}`}

        div.row_wrapper
            p.label Number:
            p.input #{data[0].number}

        div.row_wrapper
            p.label Kuupäev:
            p.input #{data[0].kpv}

        div.row_wrapper
            p.label Viitenumber:
            p.input #{data[0].viitenr}

        div.row_wrapper
            p.label Maksta arvele:
            p.input #{data[0].aa}

        div.row_wrapper
            p.label Maksja:
            p.input #{`${data[0].asutus.trim()} reg.kood: ${data[0].regkood}`}

        div.row_wrapper
            p.label Aadress:
            p.input #{`${data[0].aadress}`}

        div.row_wrapper
            p.label Lisa:
            p.input #{`${data[0].lisa ? data[0].lisa: ''}`}

        table.table.table-hover.grid_data
            thead.grid_head
                tr
                    th Teenuse nimetus
                    th Hind
                    th Kogus
                    th Käibemaks
                    th Rea summa
                    th Märkused

            tbody
                each row in data.details
                    tr
                        td=row.nimetus
                        td=Number(row.hind).toFixed(2)
                        td=row.kogus
                        td=Number(row.kbm).toFixed(2)
                        td=Number(row.summa).toFixed(2)
                        td=row.muud
        div.row_wrapper
            p.label_subtotal Summa käibemaksuta:
            p.input #{`${Number(data[0].kbmta).toFixed(2)}`}
        div.row_wrapper
            p.label_subtotal Käibemaks:
            p.input #{`${Number(data[0].kbm).toFixed(2)}`}
        div.row_wrapper
            p.label_subtotal Kokku:
            p.input #{`${Number(data[0].summa).toFixed(2)}`}

