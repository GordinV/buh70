<!DOCTYPE html>
html(lang="et")
extends report_header

block content
    style(type='text/css').
        .grid_head {
            background-color: lightgray;;
        }

        .doc_wrapper {
            margin-left: 5%;
            margin-top: 5%;
            width: auto;
        }

        .grid_data {
            width: 100%;
            border: 1px solid lightgray;
        }

        .row_wrapper {
            display: -webkit-box;
            flexDirection: row;
        }

        .label {
            width: 10%;
        }

        .input {
            width: 90%;
            margin-left: 5%;
            font-weight: bold;
        }

        .label_subtotal {
            width: 70%;
        }



    link(rel='stylesheet', href='/stylesheets/reports.css')

    div.body_wrapper
        h1 Teenuste saaja

        div.row_wrapper
            p.label Isikukood:
            p.input #{data[0].isikukood}

        div.row_wrapper
            p.label Nimi:
            p.input #{data[0].nimi}

        div.row_wrapper
            p.label Viitenumber:
            p.input #{data[0].viitenumber}

        div.row_wrapper
            p.label Jääk:
            p.input #{data[0].jaak}


        div(style="font-weight: bold; margin-left:5%")
            p Maksjad

        table.table.table-hover.grid_data
                    thead.grid_head
                        tr
                            th Nimi
                            th Tel.
                            th E-mail
                            th Suhtumine
                            th Vastav maksja

                    tbody
                        each vanem in data.vanemad
                            tr
                                td=vanem.nimetus
                                td=vanem.tel
                                td=vanem.email
                                td=vanem.suhtumine
                                td=vanem.arved


        div(style="font-weight: bold;")
            p Teenused

        table.table.table-hover.grid_data
            thead.grid_head
                tr
                    th Kood
                    th Nimetus
                    th Grupp
                    th Hind
                    th Soodustus

            tbody
                each teenus in data.teenused
                    tr
                        td=teenus.kood
                        td=teenus.nimetus
                        td=teenus.yksus
                        td=teenus.hind
                        td=teenus.soodustus
